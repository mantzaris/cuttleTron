{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": ".",
      "sourceMap": true,
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true
    },
    "include": ["**/*.ts", "**/*.js", "forge.config.cjs"],
    "exclude": ["node_modules", "dist", "**/*.spec.ts"]
  }
  

